{
  "files.associations": {
    "iostream": "cpp",
    "ostream": "cpp",
    "__node_handle": "cpp",
    "cstddef": "cpp"
  },
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.showExecutionMessage": true,
  "code-runner.showRunCommandInEditorContextMenu": false,
  "code-runner.showRunCommandInExplorerContextMenu": false,
  "files.autoSave": "onFocusChange",
  "platformSettings.autoLoad": true,
  "platformSettings.platforms": {
    "darwin": {
      "nodes": {
        "code-runner.executorMap": {
          "cpp": "cd $dir && clang++ -std=c++17 -I/Users/gautamsaha/Desktop/dsa/dsa-cpp/ $fileName -o ./out && ./out && rm ./out",
          "java": "cd $dir && javac $fileName && java $fileNameWithoutExt && rm $fileNameWithoutExt.class"
        },
        "code-runner.runInTerminal": true,
      }
    },

    
    "linux": {
      "inherits": "darwin",
      "nodes": {
        "code-runner.executorMap": {
          "cpp": "cd $dir && g++ -std=c++17 -I/home/gautam/Desktop/projects/dsa-cpp/ $fileName -o ./out && ./out && rm ./out",
          "java": "cd $dir && javac $fileName && java $fileNameWithoutExt && rm $fileNameWithoutExt.class"
        },
        "code-runner.runInTerminal": true,
      }
    },

    "win32":{
      "inherits": "linux",
      "nodes": {
        "code-runner.executorMap": {
          "cpp": "cd $dirWithoutTrailingSlash && g++ $fileName -o ./out -I/e:/ASUS/Desktop/dsa/dsa-cpp-master/ && ./out.exe && rm ./out.exe",
          "java": "cd $dir && javac $fileName && java $fileNameWithoutExt && rm $fileNameWithoutExt.class"
        },
        "code-runner.runInTerminal": true,
        "terminal.integrated.shell.windows": "E:\\Program Files\\Git\\bin\\bash.exe",
      }
    }
  }
}
